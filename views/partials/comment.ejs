<section id="comment-<%= commentIdx %>">
  <header class="comment-header" id="comment-<%= commentIdx %>-header" style="display: flex;">
    <a href="profiles/<%= comment.ownerId %>">
      <img
        id="avatar-img"
        src="<%= comment.avatar %>"
        alt="<%= comment.name %> avatar"
      >
    </a>
    <div id="comment-info">
      <div id="comment-owner">
        <%= comment.name %>
      </div>
      <div id="comment-timestamp">
        <%= comment.createdAt.toLocaleDateString() + " at " + comment.createdAt.toLocaleTimeString().slice(0, -6) + comment.createdAt.toLocaleTimeString().slice(-3) %> 
      </div>
    </div>
  </header>
  <section id="comment-body">
    <div id="comment-text-body">
      <div id="comment-<%= commentIdx %>-text" style="display: contents;">
        <%= comment.text %>
        <% if (comment.ownerId === user.profile._id.toString()) { %>
          <button id="edit-comment-btn-<%= commentIdx %>" class="edit-comment-btn">Edit</button>
        <% } %>
      </div>
      <div id="edit-comment-<%= commentIdx %>-text" class="edit-comment-body" style="display: none;">
        <form id="edit-text-form" action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PATCH" method="POST">
          <textarea id="edit-text-area" class="comment-text" name="text" style="resize: none;" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'>
            <%= comment.text %>
          </textarea>
          <button id="comment-btn" class="edit-btn" type="submit">
            Submit
          </button>
        </form>
        <button id="cancel-edit-comment-btn-<%= commentIdx %>" class="cancel-edit-comment-btn edit-btn">
          Cancel
        </button>
        <form action="/posts/<%= post._id%>/comments/<%= comment._id %>?_method=DELETE" method="POST">
          <button class="edit-btn" type="submit">
            Delete
          </button>
        </form>
      </div>
    </div>
    <div id="comment-actions">
      <form action="/posts/<%= post._id %>/comments/<%= comment._id %>/toggleLike?_method=PATCH" method="POST">
        <button id="post-<%= postIdx %>-like-comment-<%= commentIdx %>-btn" class="edit-btn like-btn <%= (comment.likes.includes(user.profile._id)) ? "action-highlight" : "" %>" type="submit">
          <i class="fas fa-thumbs-up"></i>
          Like
        </button>
      </form>
    </div>
  </section>
</section>